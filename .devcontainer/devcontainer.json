{
	"name": "${localWorkspaceFolderBasename} Dev",
	// "dockerComposeFile": "../docker-compose.yml",  // Linux
	"dockerComposeFile": "../docker-compose.mac.yml",  // Mac
	"service": "devcontainer",
	"workspaceFolder": "/workspace",

	// Features to add to the dev container
	"features": {},

	// "forwardPorts": [5173, 4173, 24678], // Auto-detected by Cursor

	// Use 'postCreateCommand' to run commands after the container is created
	// "postCreateCommand": "npm install",

	// Configure tool-specific properties
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				}
			}
		}
	},

	// Connect as claudeuser for proper dev experience
	"remoteUser": "claudeuser",

	// Environment variables handled by docker-compose.yml
	"remoteEnv": {}
}
